generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String
  cpf   String

  @@map("users")
}

model Product {
  id          String @id @default(uuid())
  name        String
  description String
  price       Int
  in_stock    Boolean

  @@map("products")
}
